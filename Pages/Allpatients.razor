@page "/allpatients"
@using Microsoft.Maui.Storage
@using System.IO
@using System.Text.Json
@using BlazorHybridApp2.Data
@using MySqlConnector
@using System.Collections.Generic
@using System.Threading.Tasks

<style>
    label {
        width: 200px;
        display: inline-block;
    }

    input {
        width: 200px;
    }

    .full-width {
        width: 100%;
    }
</style>

<h5>All Patients</h5>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Diagnosis</th>
            <th>Ward</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in patients)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Gender</td>
                <td>@patient.Age</td>
                <td>@patient.Diagnosis</td>
                <td>@patient.Ward</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Patient> patients;

    protected override async Task OnInitializedAsync()
    {
        patients = new List<Patient>();
        patients = await LoadPatientsFromDatabaseAsync();
    }

    private async Task<List<Patient>> LoadPatientsFromDatabaseAsync()
    {
        var patients = new List<Patient>();

        MySqlConnectionStringBuilder builder = new MySqlConnectionStringBuilder
            {
                Server = "localhost",
                UserID = "root",
                Password = "123123",
                Database = "hospitaldb",
            };

        using (MySqlConnection connection = new MySqlConnection(builder.ConnectionString))
        {
            await connection.OpenAsync();

            using (MySqlCommand command = new MySqlCommand("SELECT * FROM patients", connection))
            using (MySqlDataReader reader = command.ExecuteReader())
            {
                while (reader.Read())
                {
                    patients.Add(new Patient
                        {
                            Name = reader.GetString("name"),
                            Gender = reader.GetString("gender"),
                            Age = reader.GetInt32("age"),
                            Diagnosis = reader.GetString("diagnosis"),
                            Ward = reader.GetString("ward")
                        });
                }
            }
        }

        return patients;
    }
}